<resources>

    <style name="AppTheme.Button.Normal" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/button_width_normal</item>
        <item name="android:layout_height">@dimen/default_view_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.EditText.Normal" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">@dimen/default_view_height</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="backgroundTint">@color/color_7dffffff</item>
        <item name="colorControlNormal">@color/color_7dffffff</item>
        <item name="colorControlActivated">@color/color_7dffffff</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColorHint">@color/color_7dffffff</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.TextView.Light" parent="AppTheme.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.TextView.Medium" parent="AppTheme.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="AppTheme.TextView.Bold" parent="AppTheme.TextView">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Light.Error" parent="AppTheme.TextView.Light">
        <item name="android:textSize">@dimen/text_size_smallest</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.TextView.Pincode.Title" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_biggest</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextView.Pincode.SubTitle" parent="AppTheme.TextView.Pincode.Title">
        <item name="android:textSize">@dimen/text_size_smallest</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
