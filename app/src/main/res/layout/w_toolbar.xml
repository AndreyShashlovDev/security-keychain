<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbarContainer"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_toolbar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/default_margin_padding_small"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/toolbarHomeImage"
        android:layout_width="@dimen/default_view_height"
        android:layout_height="@dimen/default_view_height"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/default_margin_padding_least"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/toolbarTitle"
        style="?textLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_padding_normal"
        android:layout_marginLeft="@dimen/default_margin_padding_normal"
        android:layout_marginRight="@dimen/default_margin_padding_normal"
        android:layout_marginStart="@dimen/default_margin_padding_normal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/text_size_large"
        tools:text="Title" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/wBtnAdd"
        android:layout_width="@dimen/default_view_height"
        android:layout_height="@dimen/default_view_height"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/default_margin_padding_least"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_add_white" />

</LinearLayout>
